/// Verificação de email de usuários.
model UserEmailVerification {
  id        String    @id @default(uuid()) @map("id")
  email     String    @unique @map("email")
  token     String    @map("token")
  expiresAt DateTime  @db.Timestamptz @map("expires_at")
  verified  Boolean   @default(false) @map("verified")
  createdAt DateTime  @default(now()) @db.Timestamptz @map("created_at")
  updatedAt DateTime  @updatedAt @db.Timestamptz @map("updated_at")
  userId    String    @unique @map("user_id")
  /// Data de exclusão lógica.
  deletedAt DateTime? @db.Timestamptz @map("deleted_at")
  /// ID do usuário que realizou a exclusão.
  deletedBy String?   @map("deleted_by")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([deletedAt])
